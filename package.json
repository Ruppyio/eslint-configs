{
  "name": "eslint-configs",
  "description": "Bootstrap Ruppy's eslint configs into the project ðŸš€",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "jest": "jest",
    "lerna:publish": "yarn bootstrap && lerna publish",
    "lint": "eslint --fix --color --cache .",
    "prettify": "prettier --write .",
    "preversion": "yarn test",
    "test": "yarn lint && yarn prettify && yarn jest"
  },
  "keywords": [
    "eslint",
    "ruppy",
    "config",
    "eslintconfig",
    "eslint-config"
  ],
  "author": "Ruppy.io (https://ruppy.io)",
  "contributors": [
    "Latipun <latifsulistyo.me@gmail.com> (https://ruppy.io)"
  ],
  "license": "MIT",
  "repository": "https://github.com/Ruppyio/eslint-configs.git",
  "bugs": "https://github.com/Ruppyio/eslint-configs/issues",
  "homepage": "https://github.com/Ruppyio/eslint-configs#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.13.0",
    "eslint-find-rules": "^3.6.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.0",
    "jest": "^26.6.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.5.2",
    "mock-stdin": "^1.0.0",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "typescript": "^4.0.3"
  },
  "resolutions": {
    "eslint-find-rules/yargs": "^15.3.1",
    "lerna/**/dot-prop": "^5.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  }
}
