{
  "name": "eslint-configs",
  "description": "Bootstrap Ruppy's eslint configs into the project ðŸš€",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --check .",
    "test": "jest",
    "release": "yarn workspaces foreach run semantic-release",
    "postinstall": "husky install"
  },
  "keywords": [
    "eslint",
    "ruppy",
    "config",
    "eslintconfig",
    "eslint-config"
  ],
  "contributors": [
    "Latipun <latifsulistyo.me@gmail.com> (https://latipun7.github.io)"
  ],
  "license": "MIT",
  "repository": "https://github.com/Ruppyio/eslint-configs.git",
  "bugs": "https://github.com/Ruppyio/eslint-configs/issues",
  "homepage": "https://github.com/Ruppyio/eslint-configs#readme",
  "devDependencies": {
    "@latipun7/releaserc": "^2.1.1",
    "eslint": "^7.32.0",
    "eslint-find-rules": "^3.6.1",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "semantic-release": "^18.0.0",
    "semantic-release-monorepo": "^7.0.5",
    "typescript": "^4.4.3"
  },
  "packageManager": "yarn@3.0.2",
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "release": {
    "extends": [
      "semantic-release-monorepo",
      "@latipun7/releaserc/monorepo"
    ]
  }
}
