{
  "name": "eslint-configs",
  "description": "Bootstrap Ruppy's eslint configs into the project ðŸš€",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "lerna:publish": "yarn bootstrap && lerna publish",
    "lint": "eslint --fix --color --cache .",
    "format": "prettier --write .",
    "test": "jest",
    "test:all": "yarn lint && yarn format && yarn test",
    "postinstall": "husky install",
    "preversion": "yarn test:all"
  },
  "keywords": [
    "eslint",
    "ruppy",
    "config",
    "eslintconfig",
    "eslint-config"
  ],
  "author": "Ruppy.io (https://ruppy.io)",
  "contributors": [
    "Latipun <latifsulistyo.me@gmail.com> (https://ruppy.io)"
  ],
  "license": "MIT",
  "repository": "https://github.com/Ruppyio/eslint-configs.git",
  "bugs": "https://github.com/Ruppyio/eslint-configs/issues",
  "homepage": "https://github.com/Ruppyio/eslint-configs#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-find-rules": "^3.6.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "mock-stdin": "^1.0.0",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": "prettier --write",
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
