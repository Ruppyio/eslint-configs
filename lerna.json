{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "create": {
      "keywords": "eslint, ruppy, config, eslintconfig, eslint-config",
      "license": "MIT"
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish %s"
    }
  },
  "ignoreChanges": ["**/test/**", "**/*.md"],
  "version": "1.0.0"
}
